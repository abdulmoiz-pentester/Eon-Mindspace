# ============ SERVER CONFIG ============
PORT=5000
FRONTEND_URL=http://localhost:8080
NODE_ENV=development
SESSION_SECRET=your-session-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# ============ SAML CONFIGURATION ============
# Choose between Samling (dev) or AWS SSO (prod)
SAML_PROVIDER=samling  # Options: 'samling' or 'aws-sso'
ENABLE_SAML=true

# ============ SAMLING (Development/Testing) ============
SAMLING_ENTRY_POINT=https://fujifish.github.io/samling/samling.html
SAMLING_ISSUER=eon-mindspace-app
SAMLING_LOGOUT_URL=https://fujifish.github.io/samling/samling.html?action=logout

# ============ AWS SSO (Production) ============
# Get these values from AWS SSO SAML metadata
AWS_SSO_ENTRY_POINT=
AWS_SSO_ISSUER=
AWS_SSO_CERTIFICATE=
AWS_SSO_LOGOUT_URL=

# ============ COMMON SAML SETTINGS ============
SAML_CALLBACK_URL=http://localhost:5000/auth/saml/callback
SAML_WANT_ASSERTIONS_SIGNED=false
SAML_WANT_RESPONSE_SIGNED=false
SAML_SIGNATURE_VALIDATION=false
SAML_ACCEPTED_CLOCK_SKEW_MS=-1

# ============ SESSION CONFIG ============
SESSION_MAX_AGE=86400000
SESSION_COOKIE_NAME=eon_session_dev
ALLOWED_DOMAINS=localhost,eonhealth.com