# ==================================

# Server Configuration

# ==================================

PORT=5000
NODE_ENV=development

# Application URLs

FRONTEND_URL=[http://localhost:8080](http://localhost:8080)
BACKEND_URL=[http://localhost:5000](http://localhost:5000)

# Security Secrets (replace with strong random values)

SESSION_SECRET=replace_with_strong_session_secret
JWT_SECRET=replace_with_strong_jwt_secret

# ==================================

# SAML Configuration

# ==================================

SAML_PROVIDER=aws-sso
ENABLE_SAML=true

# Callback

SAML_CALLBACK_URL=[http://localhost:5000/auth/saml/callback](http://localhost:5000/auth/saml/callback)

# Security Settings

SAML_WANT_ASSERTIONS_SIGNED=true
SAML_WANT_RESPONSE_SIGNED=true
SAML_SIGNATURE_VALIDATION=true
SAML_ACCEPTED_CLOCK_SKEW_MS=10000

# ==================================

# AWS SSO Configuration

# ==================================

AWS_SSO_ENTRY_POINT=[https://your-aws-sso-entry-point](https://your-aws-sso-entry-point)
AWS_SSO_ISSUER=urn:amazon:webservices
AWS_SSO_LOGOUT_URL=[https://your-aws-sso-logout-url](https://your-aws-sso-logout-url)

# IMPORTANT:

# Paste the full certificate content in your real .env file.

# Never commit the real certificate.

AWS_SSO_CERTIFICATE=-----BEGIN CERTIFICATE-----\nYOUR_CERTIFICATE_CONTENT\n-----END CERTIFICATE-----

AWS_PROFILE=your-aws-profile

# Bedrock

BEDROCK_AGENT_ARN=arn:aws:bedrock:region:account-id:agent/agent-id

# ==================================

# Session Configuration

# ==================================

SESSION_MAX_AGE=86400000
SESSION_COOKIE_NAME=app_session

# Allowed company domains

ALLOWED_DOMAINS=example.com
